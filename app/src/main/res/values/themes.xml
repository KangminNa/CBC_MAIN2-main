<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CBC_MAIN" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/green2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/j_yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green2</item>
    </style>
    <style name="Button_yellow" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/j_yellow</item>
    </style>

    <style name="HeaderText" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/green1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/nanumsquare_bold</item>
    </style>

    <style name="WeekText" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textColor">#3D5220</item>
        <item name="fontFamily">@font/nanumsquare_bold</item>
    </style>

    <style name="DiaryRecord">
        <item name="android:textColor">@color/green2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/nanumsquare_regular</item>
    </style>

    <style name="TipText">
        <item name="android:textColor">#344565</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="fontFamily">@font/nanumsquare_regular</item>
    </style>

    <style name="LoginText">
        <item name="android:textColorHint">#4D000000</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

</resources>