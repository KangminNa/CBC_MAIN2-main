<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tip4Fragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/tip4Box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tip4_box"
        />
    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tip4Box"
        app:layout_constraintEnd_toEndOf="@id/tip4Box"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:text="기록전체삭제"
        android:textSize="10sp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/imgFrame"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/frame"
        app:layout_constraintTop_toTopOf="@id/tip4Box"
        app:layout_constraintStart_toStartOf="@id/tip4Box"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:id="@+id/imgChair"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/chair"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgFrame"
        app:layout_constraintStart_toStartOf="@id/imgFrame"
        />
    <ImageView
        android:id="@+id/imgChain"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/chain"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgChair"
        app:layout_constraintStart_toStartOf="@id/imgFrame"
        />
    <ImageView
        android:id="@+id/imgTip4Wheel"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/tip4_wheel"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/imgChain"
        app:layout_constraintStart_toStartOf="@id/imgFrame"
        />

    <TextView
        android:id="@+id/tvFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgFrame"
        app:layout_constraintStart_toEndOf="@id/imgFrame"
        android:text="프레임"
        android:layout_marginLeft="10dp"
        android:textColor="#344565"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tvChair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgChair"
        app:layout_constraintStart_toEndOf="@id/imgChair"
        android:text="안장"
        android:layout_marginLeft="10dp"
        android:textColor="#344565"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tvChain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgChain"
        app:layout_constraintStart_toEndOf="@id/imgChain"
        android:text="체인"
        android:layout_marginLeft="10dp"
        android:textColor="#344565"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tvTip4Wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgTip4Wheel"
        app:layout_constraintStart_toEndOf="@id/imgTip4Wheel"
        android:text="바퀴"
        android:layout_marginLeft="10dp"
        android:textColor="#344565"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="15sp"
        />

    <ProgressBar
        android:id="@+id/pbTip4Frame"
        android:layout_width="250dp"
        android:layout_height="15dp"
        android:elevation="10dp"
        android:progressDrawable="@drawable/tip4_bg"
        style="@android:style/Widget.ProgressBar.Horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvFrame"
        app:layout_constraintStart_toStartOf="@id/tvFrame"
        android:layout_marginTop="10dp"
        android:progress="0"
        android:min="0"
        android:max="10000"
        />

    <ProgressBar
        android:id="@+id/pbTip4Chair"
        android:layout_width="250dp"
        android:layout_height="15dp"
        android:elevation="10dp"
        android:progressDrawable="@drawable/tip4_bg"
        style="@android:style/Widget.ProgressBar.Horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvChair"
        app:layout_constraintStart_toStartOf="@id/tvChair"
        android:layout_marginTop="10dp"
        android:progress="0"
        android:min="0"
        android:max="1000"
        />
    <ProgressBar
        android:id="@+id/pbTip4Chain"
        android:layout_width="250dp"
        android:layout_height="15dp"
        android:elevation="10dp"
        android:progressDrawable="@drawable/tip4_bg"
        style="@android:style/Widget.ProgressBar.Horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvChain"
        app:layout_constraintStart_toStartOf="@id/tvChain"
        android:layout_marginTop="10dp"
        android:progress="0"
        android:min="0"
        android:max="4000"
        />

    <ProgressBar
        android:id="@+id/pbTip4Wheel"
        android:layout_width="250dp"
        android:layout_height="15dp"
        android:elevation="10dp"
        android:progressDrawable="@drawable/tip4_bg"
        style="@android:style/Widget.ProgressBar.Horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvTip4Wheel"
        app:layout_constraintStart_toStartOf="@id/tvTip4Wheel"
        android:layout_marginTop="10dp"
        android:progress="0"
        android:min="0"
        android:max="20000"
        />

    <TextView
        android:id="@+id/tvCurKmFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정비까지 남은 km"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/pbTip4Frame"
        app:layout_constraintEnd_toEndOf="@id/pbTip4Frame"
        />

    <TextView
        android:id="@+id/tvCurKmChair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정비까지 남은 km"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/pbTip4Chair"
        app:layout_constraintEnd_toEndOf="@id/pbTip4Chair"
        />

    <TextView
        android:id="@+id/tvCurKmChain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정비까지 남은 km"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/pbTip4Chain"
        app:layout_constraintEnd_toEndOf="@id/pbTip4Chain"
        />

    <TextView
        android:id="@+id/tvCurKmWheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정비까지 남은 km"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/pbTip4Wheel"
        app:layout_constraintEnd_toEndOf="@id/pbTip4Wheel"
        />


</androidx.constraintlayout.widget.ConstraintLayout>